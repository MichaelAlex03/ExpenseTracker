{
    "manifest_version": 3,
    "name": "Expense Tracker",
    "version": "1.0.0",
    "description": "Automatically track your online purchases",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "notifications",
      "sidePanel"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Expense Tracker"
    },
    "side_panel": {
      "default_path": "popup/popup.html"
    },
    "icons": {
      "16": "/icons/favicon-16x16.png",
      "32": "/icons/favicon-32x32.png"
    }
  }
