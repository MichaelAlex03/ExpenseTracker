{
    "manifest_version": 3,
    "name": "Expense Tracker",
    "version": "1.0.0",
    "description": "Automatically track your online purchases",
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "notifications"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"],
        "css": ["popup.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "/index.html",
      "default_title": "Expense Tracker"
    },
    "icons": {
      "16": "/icons/favicon-16x16.png",
      "32": "/icons/favicon-32x32.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["icons/*", "fonts/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
